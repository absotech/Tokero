<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tokero.Views.LoginPage"
             Title="Login"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1E}">
    <Grid>
        <StackLayout Margin="40"
                     VerticalOptions="Center">
            <Label Text="Welcome"
                   FontSize="32"
                   HorizontalOptions="Center"
                   Margin="0,0,0,40"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />

            <Entry x:Name="UsernameEntry"
                   Placeholder="Username"
                   Text="{Binding Username}"
                   Margin="0,10"
                   PlaceholderColor="{AppThemeBinding Light=Gray, Dark=LightGray}"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
            <Entry x:Name="PasswordEntry"
                   Placeholder="Password"
                   IsPassword="True"
                   Text="{Binding Password}"
                   Margin="0,10"
                   PlaceholderColor="{AppThemeBinding Light=Gray, Dark=LightGray}"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
            <Button Text="Login"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="{AppThemeBinding Light=#007AFF, Dark=#0A84FF}"
                    TextColor="{AppThemeBinding Light=White, Dark=White}"
                    Margin="0,20" />

        </StackLayout>
    </Grid>
</ContentPage>
