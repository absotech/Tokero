<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Tokero.Models"
             xmlns:converters="clr-namespace:Tokero.Converters"
             xmlns:viewModels="clr-namespace:Tokero.ViewModels"
             x:Class="Tokero.Views.PortfolioPage"
             x:DataType="viewModels:PortfolioViewModel"
             x:Name="Portfolio"
             Title="Portfolio">
    <ContentPage.Resources>
        <converters:RoiToColorConverter x:Key="RoiToColorConverter" />
    </ContentPage.Resources>
    <Grid x:Name="MainGrid"
          Margin="10"
          RowSpacing="10"
          ColumnSpacing="20">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowStates">
                <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter TargetName="MainGrid"
                                Property="ColumnDefinitions"
                                Value="*" />
                        <Setter TargetName="MainGrid"
                                Property="RowDefinitions"
                                Value="Auto, *, Auto" />
                        <Setter TargetName="LeftPanel"
                                Property="Grid.Row"
                                Value="0" />
                        <Setter TargetName="LeftPanel"
                                Property="Grid.Column"
                                Value="0" />
                        <Setter TargetName="RightPanel"
                                Property="Grid.Row"
                                Value="1" />
                        <Setter TargetName="RightPanel"
                                Property="Grid.Column"
                                Value="0" />
                        <Setter TargetName="BackButton"
                                Property="Grid.Row"
                                Value="2" />
                        <Setter TargetName="BackButton"
                                Property="Grid.Column"
                                Value="0" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter TargetName="MainGrid"
                                Property="ColumnDefinitions"
                                Value="*,*" />
                        <Setter TargetName="MainGrid"
                                Property="RowDefinitions"
                                Value="*, Auto" />
                        <Setter TargetName="LeftPanel"
                                Property="Grid.Row"
                                Value="0" />
                        <Setter TargetName="LeftPanel"
                                Property="Grid.Column"
                                Value="0" />
                        <Setter TargetName="RightPanel"
                                Property="Grid.Row"
                                Value="0" />
                        <Setter TargetName="RightPanel"
                                Property="Grid.Column"
                                Value="1" />
                        <Setter TargetName="BackButton"
                                Property="Grid.Row"
                                Value="1" />
                        <Setter TargetName="BackButton"
                                Property="Grid.Column"
                                Value="0" />
                        <Setter TargetName="BackButton"
                                Property="Grid.ColumnSpan"
                                Value="2" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <ScrollView x:Name="LeftPanel"
                    Grid.Row="0"
                    Grid.Column="0">
            <StackLayout Spacing="10">
                <Label Text="Portfolio Overview"
                       FontSize="28"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10" />
                <Frame Padding="10"
                       HasShadow="True"
                       BackgroundColor="{AppThemeBinding Light=White, Dark=#2c2c2c}">
                    <Grid ColumnDefinitions="*,*,*">
                        <StackLayout Grid.Column="0"
                                     HorizontalOptions="Center">
                            <Label Text="Total Invested"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
                            <Label Text="{Binding TotalInvested, StringFormat='€{0:N2}'}"
                                   FontSize="16"
                                   FontAttributes="Bold" />
                        </StackLayout>
                        <StackLayout Grid.Column="1"
                                     HorizontalOptions="Center">
                            <Label Text="Current Value"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
                            <Label Text="{Binding CurrentValue, StringFormat='€{0:N2}'}"
                                   FontSize="16"
                                   FontAttributes="Bold" />
                        </StackLayout>
                        <StackLayout Grid.Column="2"
                                     HorizontalOptions="Center">
                            <Label Text="Overall ROI"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
                            <Label Text="{Binding OverallRoi, StringFormat='{0:F2}%'}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{Binding OverallRoi, Converter={StaticResource RoiToColorConverter}}" />
                        </StackLayout>
                    </Grid>
                </Frame>
                <Label Text="Investment Plans"
                       FontSize="20"
                       FontAttributes="Bold"
                       Margin="0,20,0,5" />
                <CollectionView ItemsSource="{Binding AllPlans}"
                                HeightRequest="280">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal"
                                           ItemSpacing="10" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:InvestmentPlan">
                            <Frame WidthRequest="320"
                                   Margin="0,5,10,10"
                                   Padding="10"
                                   HasShadow="True"
                                   CornerRadius="10"
                                   BorderColor="{AppThemeBinding Light=LightGray, Dark=Gray}"
                                   BackgroundColor="{AppThemeBinding Light=White, Dark=#2c2c2c}">
                                <Grid>
                                    <StackLayout Spacing="12">
                                        <Label Text="{Binding PlanName}"
                                               FontSize="18"
                                               FontAttributes="Bold" />
                                        <Grid ColumnDefinitions="Auto, *"
                                              RowDefinitions="Auto, Auto"
                                              RowSpacing="5"
                                              ColumnSpacing="10">
                                            <Label Grid.Row="0"
                                                   Grid.Column="0"
                                                   Text="Strategy:"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
                                            <Label Grid.Row="0"
                                                   Grid.Column="1"
                                                   Text="{Binding AllocationStrategy}"
                                                   FontSize="12"
                                                   FontAttributes="Bold" />
                                        </Grid>
                                        <BoxView HeightRequest="1"
                                                 Color="{AppThemeBinding Light=#e0e0e0, Dark=#505050}" />
                                        <Label Text="Configured Assets"
                                               FontSize="14"
                                               FontAttributes="Bold" />
                                        <StackLayout BindableLayout.ItemsSource="{Binding ConfiguredAssets}">
                                            <BindableLayout.ItemTemplate>
                                                <DataTemplate x:DataType="models:ConfiguredAsset">
                                                    <Grid ColumnDefinitions="*, Auto"
                                                          Padding="0,2">
                                                        <Label Grid.Column="0"
                                                               VerticalOptions="Center">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="{Binding Symbol}"
                                                                          FontAttributes="Bold"
                                                                          FontSize="12" />
                                                                    <Span Text=" - "
                                                                          FontSize="12" />
                                                                    <Span Text="{Binding Name}"
                                                                          FontSize="12" />
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                        <Label Grid.Column="1"
                                                               Text="{Binding MonthlyInvestment, StringFormat='€{0:N2}/mo'}"
                                                               FontSize="12"
                                                               HorizontalOptions="End"
                                                               VerticalOptions="Center" />
                                                    </Grid>
                                                </DataTemplate>
                                            </BindableLayout.ItemTemplate>
                                        </StackLayout>
                                    </StackLayout>
                                    <Button Text="Delete"
                                            BackgroundColor="Red"
                                            TextColor="White"
                                            HorizontalOptions="End"
                                            VerticalOptions="Start"
                                            Margin="0,5,5,0"
                                            CornerRadius="8"
                                            WidthRequest="80"
                                            Command="{Binding Source={x:Reference Portfolio}, Path=BindingContext.DeleteCommand}"
                                            CommandParameter="{Binding .}"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
        <StackLayout x:Name="RightPanel"
                     Grid.Row="1"
                     Grid.Column="0"
                     Spacing="5">
            <Label Text="Investment History"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,10,0,5" />
            <RefreshView IsRefreshing="{Binding IsRefreshing}"
                         Command="{Binding RefreshCommand}">
                <CollectionView ItemsSource="{Binding AllInvestments}">
                    <CollectionView.Header>
                        <Grid Padding="10,8"
                              BackgroundColor="{AppThemeBinding Light=#f0f0f0, Dark=#3a3a3a}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition Width="1.5*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="1.2*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"
                                   Text="Date"
                                   FontSize="12"
                                   FontAttributes="Bold" />
                            <Label Grid.Column="1"
                                   Text="Invested"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="End" />
                            <Label Grid.Column="2"
                                   Text="Current Value"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="End" />
                            <Label Grid.Column="3"
                                   Text="ROI"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="End" />
                        </Grid>
                    </CollectionView.Header>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Investment">
                            <Grid Padding="10,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="1.2*" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0"
                                       Text="{Binding Date, StringFormat='{0:MMM yyyy}'}"
                                       FontSize="11"
                                       VerticalOptions="Center" />
                                <Label Grid.Column="1"
                                       Text="{Binding Amount, StringFormat='€{0:N2}'}"
                                       FontSize="11"
                                       VerticalOptions="Center"
                                       HorizontalTextAlignment="End" />
                                <Label Grid.Column="2"
                                       Text="{Binding CurrentValue, StringFormat='€{0:N2}'}"
                                       FontSize="11"
                                       VerticalOptions="Center"
                                       HorizontalTextAlignment="End" />
                                <Label Grid.Column="3"
                                       Text="{Binding TotalRoi, StringFormat='{0:F2}%'}"
                                       FontSize="11"
                                       VerticalOptions="Center"
                                       TextColor="{Binding TotalRoi, Converter={StaticResource RoiToColorConverter}}"
                                       HorizontalTextAlignment="End" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </StackLayout>
        <Button x:Name="BackButton"
                Grid.Row="2"
                Grid.Column="0"
                Text="← Back to Dashboard"
                Command="{Binding BackToDashboardCommand}"
                Style="{StaticResource SecondaryButtonStyle}"
                VerticalOptions="End"
                Margin="0,10,0,0" />
    </Grid>
</ContentPage>
